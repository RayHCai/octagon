{
    "compilerOptions": {
        "outDir": "lib",
        "target": "ESNext",
        "lib": ["ES2019", "ESNext"],
        "allowJs": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "incremental": true,
        "alwaysStrict": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "*": ["./src/*.d.ts"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
